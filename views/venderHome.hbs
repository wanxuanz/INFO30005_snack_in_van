<section id="vanDetials">

    <h1> Vender Details </h1>

    <script>
    
    function update(status){
        
        if(status === "close"){
            return Van.updateOne({ vanId: req.session.van_name }, { status: "open" }).lean()
        } else {
            return Van.updateOne({ vanId: req.session.van_name }, { status: "close" }).lean()
        }
        // oneVan.save()
        // return res.render('showVanStatus', { "oneVan": oneVan })
    }
    </script> 
