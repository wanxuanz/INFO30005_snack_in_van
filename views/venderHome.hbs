                <h3>Van Name: {{oneVan.vanId}}</h3>
            </li>
            <li>
                <h3>Address Message: {{oneVan.address}}</h2>
            </li>
            <li>
                <h3>Location: [{{oneVan.location.coordinates}}]</h2>
            </li>
            <li>
                <form method="post" action="/vender/vans/home/updateVanStatus">
                    <input type="hidden" name = "status" value="{{this.status}}">
                    <button type="submit"  class="register-btn" style="padding: 1%;" onclick="return update('{{oneVan.status}}');">
                    Change Status
                    </button>
                </form>
            </li>
        </ul>   
    </section>
